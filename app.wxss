/**app.wxss**/

/* 框架 */
page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}
.scroller {
  overflow-y: auto;
}
/* 按钮 */
.g-btn-large {
  width: 650rpx;
  height: 30pt;
  line-height: 30pt;
  font-size: 13pt;
}
.g-btn-middle {
  width: 400rpx;
  height: 30pt;
  line-height: 30pt;
  font-size: 13pt;
}
.g-btn-small {
  width: 300rpx;
  height: 30pt;
  line-height: 30pt;
  font-size: 13pt;
}
.g-btn-group {
  /* only for 2 g-btn-small */
  width: 650rpx;
  display: flex;
  justify-content: space-between;
}
.g-btn-green {
  background: rgb(38, 171, 40);
  color: white;
}
.g-btn-green:active {
  background: rgb(34, 153, 35);
  color: rgba(255, 255, 255, 0.6);
}
.g-btn-red {
  background: rgb(228, 69, 70);
  color: white;
}
.g-btn-red:active {
  background: rgb(204, 62, 62);
  color: rgba(255, 255, 255, 0.6);
}
.g-btn-grey {
  background: rgb(248, 248, 248);
}
.g-btn-grey:active {
  background: rgb(222, 222, 222);
  color: rgba(0, 0, 0, 0.6);
}
.g-btn-txt {
  color: #576B95;
  font-size: 11pt;
}
.g-btn-txt:active {
  color: rgba(87, 107, 149, 0.2);
}
/* 提示 */
.g-tip {
  color: #888;
  font-size: 11pt;
  padding: 15rpx 25rpx;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  background: rgba(246, 246, 246, 0.85);
}
.underline {
  text-decoration: underline;
}